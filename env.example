# AI Alert Triage System Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# LLM Configuration
# =============================================================================
# Your AI/ML API key for LLM services
LLM_API_KEY=your-aimlapi-key-here

# =============================================================================
# Supabase Database Configuration
# =============================================================================
# Supabase project URL (get this from your Supabase project settings)
SUPABASE_URL=https://your-project-id.supabase.co

# Supabase service role key (get this from your Supabase project settings)
# WARNING: This key has full access to your database - keep it secure!
SUPABASE_SERVICE_KEY=your-service-role-key-here

# =============================================================================
# Security Configuration
# =============================================================================
# Webhook secret for validating incoming webhooks (optional but recommended)
WEBHOOK_SECRET=your-webhook-secret-here

# JWT secret for API authentication (optional)
JWT_SECRET=your-jwt-secret-here

# =============================================================================
# System Configuration
# =============================================================================
# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Maximum payload size for webhooks (in bytes)
MAX_PAYLOAD_SIZE=1048576

# Rate limiting configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=1000

# =============================================================================
# Database Table Configuration
# =============================================================================
# The following tables will be created automatically in Supabase:
# - alerts: Stores security alerts
# - ai_analysis: Stores AI analysis results
# - agent_status: Tracks agent status and activity
# - system_metrics: Stores system performance metrics
# - workflow_states: Tracks workflow execution states

# =============================================================================
# Frontend Integration (for Lovable or other frontends)
# =============================================================================
# Frontend URL for CORS configuration (update for production)
FRONTEND_URL=http://localhost:3000

# API base URL for frontend integration
API_BASE_URL=http://localhost:8080

# =============================================================================
# Optional: External Service Integrations
# =============================================================================
# SIEM Integration (if using external SIEM systems)
# SPLUNK_URL=https://your-splunk-instance.com
# SPLUNK_TOKEN=your-splunk-token

# QRADAR_URL=https://your-qradar-instance.com
# QRADAR_TOKEN=your-qradar-token

# SENTINEL_URL=https://your-sentinel-instance.com
# SENTINEL_TOKEN=your-sentinel-token

# =============================================================================
# Development/Testing Configuration
# =============================================================================
# Set to true for development mode (enables debug features)
DEBUG_MODE=false

# Test mode (disables external API calls)
TEST_MODE=false

# =============================================================================
# Monitoring and Alerting
# =============================================================================
# Enable metrics collection
METRICS_ENABLED=true

# Metrics collection interval (in seconds)
METRICS_INTERVAL=60

# =============================================================================
# Instructions for Setup
# =============================================================================
# 1. Copy this file to .env: cp env.example .env
# 2. Get your Supabase credentials:
#    - Go to https://supabase.com
#    - Create a new project or use existing
#    - Go to Settings > API
#    - Copy the Project URL and Service Role Key
# 3. Update the SUPABASE_URL and SUPABASE_SERVICE_KEY values
# 4. Get your LLM API key from your preferred provider
# 5. Update LLM_API_KEY value
# 6. Optionally configure other settings as needed
# 7. Run the application: python src/main.py
